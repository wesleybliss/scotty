
html
    height 100%

.root
    color #2c3e50
    max-width 600px
    font-family Source Sans Pro, Helvetica, sans-serif
    text-align center
    & > div
        position absolute
        width 100%
    a
        color #42b983
        text-decoration none
    p
        margin-left auto
        margin-right auto
        max-width 600px


body
    background-color rgba(255,0,0,0.3)

#viewport
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    width 100%
    height 100%
    background-color rgba(0, 255, 0, 0.3)
    z-index 999
    #canvas-background
        z-index 1000
    #canvas
        z-index 1001

#canvas, #canvas-background
    height 800px
    border 1px #880000 solid
    cursor crosshair
    position absolute
    top 100px
    left 50%
    right 0
    width 800px
    margin-left -25%